
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId

#account-form-container
	form( method="post")#account-form.form-horizontal.well.span6
		h1
		p#sub1.subheading Please enter a dish.
		hr
		fieldset
			#name-cg.control-group
				label.control-label(for='name-tf') Name
				.controls
					input#name-tf.input-xlarge(type='text', name='name', value= user.name)
			#email-cg.control-group
				label.control-label(for='email-tf') Email
				.controls
					input#email-tf.input-xlarge(type='text', name='email', value= user.email)
			#restname-cg.control-group
				label.control-label(for='restname-tf') Restaurant Name
				.controls
					input#restname-tf.input-xlarge(type='text', name='restname', value= user.restname)
			#address-cg.control-group
				label.control-label(for='address-tf') Address
				.controls
					input#address-tf.input-xlarge(type='text', name='address', value= user.address)
			#city-cg.control-group
				label.control-label(for='city-tf') City
				.controls
					input#city-tf.input-xlarge(type='text', name='city', value= user.city)
			#state-cg.control-group
				label.control-label(for='state-tf') State
				.controls
					input#state-tf.input-xlarge(type='text', name='state', value= user.state)
			#zip-cg.control-group
				label.control-label(for='zip-tf') Zip Code
				.controls
					input#zip-tf.input-xlarge(type='text', name='zip', value= user.zip)
			#clist-cg.control-group
				label.control-label(for='country-list') Location
				.controls
					select#country-list(name='country')
						each item in countries
							option(selected=item.name == user.country)= item.name
			hr
			p#sub2.subheading
			#user-cg.control-group
				label.control-label(for='user-tf') Username
				.controls
					input#user-tf.input-xlarge.disabled(type='text', name='user', value= user.user)
			#pass-cg.control-group
				label.control-label(for='pass-tf') Password
				.controls
					input#pass-tf.input-xlarge(type='password', name='pass', value='')
			.form-actions
				a(href='viewmenu/?restname='+ user.restname)
					button(type="button")#account-form-btn4.btn.btn-primary View Menu
				a(href='menu')	
					button(type='button')#account-form-btn3.btn.btn-success New Dish
				button(type='button')#account-form-btn1.btn.btn-danger
				button(type='submit')#account-form-btn2.btn.btn-warning

// display form errors in a custom modal window //

include modals/form-errors
